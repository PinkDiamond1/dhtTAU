<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar" />


        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:paddingTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_light"
                        android:text="@string/setting_network"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearanceBody1"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_auto_mode"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <Switch
                            android:id="@+id/switch_auto_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_metered_network_type"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_network_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_light"
                        android:text="@string/setting_metered_network_title"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearanceBody1"/>

                    <LinearLayout
                        android:id="@+id/ll_metered_limit"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:onClick="@{listener::onClick}"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_metered_network_usage"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_network_usage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <ImageView
                            android:id="@+id/iv_metered_limited"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/icon_arrow"/>
                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_metered_network_speed"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_network_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_metered_network_speed_limit"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_network_speed_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_server_mode"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <Switch
                            android:id="@+id/switch_server_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_charging"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_charging"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:text="@string/common_on"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_internet"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_internet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:text="@string/common_on"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_wake_lock"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_wake_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:text="@string/common_on"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>