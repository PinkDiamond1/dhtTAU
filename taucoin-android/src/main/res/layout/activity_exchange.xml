<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/color_white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="100dp"
            android:paddingBottom="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:lineSpacingMultiplier="1.2"
                android:lineSpacingExtra="0dp"
                android:text="@string/qr_code_two_steps"
                android:textColor="@color/color_yellow"
                android:textAppearance="@style/TextAppearanceHeadline6" />

            <TextView
                android:id="@+id/tv_step_one"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:lineSpacingMultiplier="1.2"
                android:lineSpacingExtra="0dp"
                android:gravity="center_vertical|center"
                android:text="@string/qr_code_step_one"
                android:onClick="@{listener::onClick}"
                android:textColor="@color/color_white"
                android:background="@drawable/primary_rect_round_bg"
                android:textAppearance="@style/TextAppearanceBody1" />

            <TextView
                android:id="@+id/tv_step_two"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:lineSpacingMultiplier="1.2"
                android:lineSpacingExtra="0dp"
                android:gravity="center_vertical|center"
                android:text="@string/qr_code_step_two"
                android:onClick="@{listener::onClick}"
                android:textColor="@color/color_white"
                android:background="@drawable/black_rect_round_bg"
                android:textAppearance="@style/TextAppearanceBody1" />

        </LinearLayout>
    </LinearLayout>
</layout>