<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/color_white"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:paddingBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/qr_code_two_steps"
                    android:textColor="@color/color_yellow"
                    android:textAppearance="@style/TextAppearanceHeadline6" />

                <TextView
                    android:id="@+id/tv_step_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="40dp"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="0dp"
                    android:onClick="@{listener.onClick}"
                    android:textAppearance="@style/TextAppearanceBody1" />

                <TextView
                    android:id="@+id/tv_step_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="40dp"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="0dp"
                    android:onClick="@{listener.onClick}"
                    android:textAppearance="@style/TextAppearanceBody1" />

                <RelativeLayout
                    android:id="@+id/rl_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">

                    <io.taucoin.torrent.publishing.ui.customviews.SquareImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:contentDescription="@null"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_rect_round_bg_no_border">

                        <io.taucoin.torrent.publishing.ui.customviews.RoundButton
                            android:id="@+id/round_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:layout_margin="1dp"
                            app:borderColor="@color/primary_light"
                            app:borderWidth="0dp"
                            app:radius="7dp"
                            app:isRadiusAutoHalf="true"
                            app:bgColor="@color/primary_light"
                            app:textColorForPressed="@color/color_white" />

                    </FrameLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>