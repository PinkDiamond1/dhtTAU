<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar" />


        <EditText
            android:id="@+id/et_old_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:textColor="@color/color_black"
            android:text="@string/tx_address_hint"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:autofillHints="@string/tx_address_hint" />

        <EditText
            android:id="@+id/et_new_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:hint="@string/tx_new_name"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:autofillHints="@string/tx_new_name" />

    </LinearLayout>
</layout>