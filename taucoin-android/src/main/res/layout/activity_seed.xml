<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar" />

        <EditText
            android:id="@+id/et_seed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal|bottom"
            android:hint="@string/user_seed_import_tip"
            android:inputType="textMultiLine"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:autofillHints="@string/community_coin_name" />

        <TextView
            android:id="@+id/btn_seed_import"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/user_seed_import"
            android:onClick="@{listener.onClick}"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:gravity="center_vertical|center"
            android:background="@drawable/primary_rect_round_bg"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/btn_seed_generate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/user_seed_generate"
            android:onClick="@{listener.onClick}"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:gravity="center_vertical|center"
            android:background="@drawable/black_light_rect_round_bg"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
</layout>