<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar_group" />

        <LinearLayout
            android:id="@+id/ll_today_income_tips"
            android:layout_below="@+id/toolbar_include"
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_today_mining_income_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/community_today_mining_income"
                android:textColor="@color/color_white"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

            <TextView
                android:id="@+id/tv_today_mining_income_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/color_white"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

            <ImageView
                android:id="@+id/iv_mining_income_close"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:onClick="@{listener::onClick}"
                android:contentDescription="@null"
                android:src="@mipmap/icon_back"/>
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:layout_below="@+id/ll_today_income_tips"
            android:id="@+id/tab_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:tabMinWidth="90dp"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/TabLayout"
            app:tabIndicatorHeight="4dp"
            app:tabIndicatorColor="@color/primary"
            app:tabSelectedTextColor="@color/primary"
            app:tabTextColor="@color/gray_dark"
            app:tabBackground="@color/color_transparent"
            app:tabRippleColor="@color/color_transparent"/>

        <View
            android:id="@+id/tab_layout_line"
            android:layout_below="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <androidx.viewpager.widget.ViewPager
            android:layout_below="@+id/tab_layout_line"
            android:layout_above="@+id/ll_bottom_input"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_bottom_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="@{listener::onClick}"
                android:src="@mipmap/icon_copy"
                android:contentDescription="@null"/>

            <EditText
                android:id="@+id/et_message_input"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:text=""
                android:hint="@string/community_input_hint"
                android:inputType="text"
                android:autofillHints="@string/community_input_hint" />
        </LinearLayout>

        <com.leinardi.android.speeddial.SpeedDialOverlayLayout
            android:id="@+id/fab_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/speedDialOverlayColor" />

        <io.taucoin.torrent.publishing.ui.customviews.ThemedSpeedDialView
            android:id="@+id/fab_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            app:sdMainFabClosedSrc="@drawable/ic_add_36dp"
            app:sdMainFabAnimationRotateAngle="135"
            app:sdOverlayLayout="@id/fab_overlay" />

    </RelativeLayout>
</layout>