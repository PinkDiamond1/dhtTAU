<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="300dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:drawablePadding="2dp"
                android:onClick="@{listener::onClick}"
                android:textAppearance="@style/TextAppearanceBody1" />

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:padding="5dp"
                android:onClick="@{listener::onClick}"
                android:contentDescription="@null"
                android:src="@mipmap/icon_copy_text"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:includeFontPadding="false"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="@color/gray_dark"
            android:textAppearance="@style/TextAppearanceBody3" />

        <RelativeLayout
            android:id="@+id/rl_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <io.taucoin.torrent.publishing.ui.customviews.SquareImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@null"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_rect_round_bg_no_border">

                <io.taucoin.torrent.publishing.ui.customviews.RoundButton
                    android:id="@+id/round_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_white"
                    android:textStyle="bold"
                    android:layout_margin="1dp"
                    app:borderColor="@color/primary_light"
                    app:borderWidth="0dp"
                    app:radius="7dp"
                    app:isRadiusAutoHalf="true"
                    app:bgColor="@color/primary_light"
                    app:textColorForPressed="@color/color_white" />

            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>